<!DOCTYPE html>
<html>
  <head>
    <title>Dojo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
    	<span class="navbar-brand">DoJo</span>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
          	<%= link_to('Home', root_path, {class: "nav-link"}) %>
          </li>
    			<% if current_user %>
    				<li class="nav-item">
              <%= link_to('個人檔案', user_path(current_user), {class: "nav-link"}) %>
            </li>
            <li class="nav-item">
              <%= link_to('修改資料', edit_user_path(current_user), {class: "nav-link"}) %>
            </li>
            <li class="nav-item">
              <%= link_to('登出', destroy_user_session_path, {method: :delete, class: "nav-link"}) %>
            </li>
            <% if current_user.role == "admin"%>
              <li class="nav-item">
                <%= link_to '後台', admin_posts_path, {class: "nav-link"} %>
              </li>
            <% end %>
          <% else %>
          	<li class="nav-item">
              <%= link_to('註冊', new_user_registration_path, {class: "nav-link"}) %>
            </li>
            <li class="nav-item">
              <%= link_to('登入', new_user_session_path, {class: "nav-link"}) %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>

    <% if notice %>
    <div class="noti-aler-wrapper notice notice-dismissible">
        <button type="button" class="close" data-dismiss="notice" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <p><%= notice %></p>
    </div>
    <% end %>
    <% if alert %>
    <div class="noti-aler-wrapper alert notice-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <p><%= alert %></p>
    </div>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>

    <script type="text/javascript">
    	$(document).ready(function(){
        setTimeout(function(){
          $('.noti-aler-wrapper').fadeOut('slow',function(){
            $(this).remove();
          });
        }, 4000);
      });
    </script>

  </body>
</html>
