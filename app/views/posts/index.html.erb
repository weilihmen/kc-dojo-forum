<h1>POST INDEX</h1>

<div>
	<button>
		<%= link_to '新增',new_post_path %>
	</button>
</div>
<br>
<p>(點選表頭可以做排序)</p>
<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th><%= sort_link @q, :title%></th>
			<th><%= sort_link @q, :user_name, "author"%></th>
			<th><%= sort_link @q, :created_at%></th>
			<th>action</th>
		</tr>
	</thead>
	<tbody>
    <% @posts.each do |p| %>
		<tr>
			<td><%= link_to p.title, post_path(p) %></td>
			<td><%= link_to p.user.name, user_path(p.user) %></td>
			<td><%= p.created_at.strftime("%Y/%m/%d %H:%M")%></td>
			<td>
				<%= link_to 'Edit', edit_post_path(p) %>
        <%= link_to 'Delete', post_path(p), method: :delete, data: { confirm: "Are you sure?"} %>
      </td>
		</tr>
	</tbody>
	<%end%>
</table>

<%= will_paginate @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>