<%= render partial:"user" %>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to "Post", post_user_path(@user), class: "nav-link"%>
  </li>
  <li class="nav-item">
    <%= link_to "Collect", collect_user_path(@user), class: "nav-link"%>
  </li>
  <li class="nav-item">
    <%= link_to "Draft", draft_user_path(@user), class: "nav-link"%>
  </li>
  <li class="nav-item">
    <%= link_to "Comment", comment_user_path(@user), class: "nav-link active"%>
  </li>
  <li class="nav-item">
    <%= link_to "Friend", friend_user_path(@user), class: "nav-link"%>
  </li>
</ul>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>title</th>
      <th>created_at</th>
    </tr>
  </thead>
  <tbody>
    <% @user.comments.each do |c| %>
    <tr>
      <% p = c.post %>
      <td><%= link_to p.title, post_path(p) %></td>
      <td><%= p.created_at.strftime("%Y/%m/%d %H:%M")%></td>
    </tr>
  </tbody>
  <%end%>
</table>