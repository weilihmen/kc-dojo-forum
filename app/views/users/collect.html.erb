<%= render partial:"user" %>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to "Post", post_user_path(@user), class: "nav-link"%>
  </li>
  <li class="nav-item">
    <%= link_to "Collect", collect_user_path(@user), class: "nav-link active"%>
  </li>
  <li class="nav-item">
    <%= link_to "Draft", draft_user_path(@user), class: "nav-link"%>
  </li>
  <li class="nav-item">
    <%= link_to "Comment", comment_user_path(@user), class: "nav-link"%>
  </li>
  <li class="nav-item">
    <%= link_to "Friend", friend_user_path(@user), class: "nav-link"%>
  </li>
</ul>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>title</th>
      <th>created_at</th>
      <th>action</th>
    </tr>
  </thead>
  <tbody>
    <% @user.liked_posts.each do |p| %>
    <tr id=<%=p.id%> >
      <td><%= link_to p.title, post_path(p) %></td>
      <td><%= p.created_at.strftime("%Y/%m/%d %H:%M")%></td>
      <td>
        <%= link_to "收回喜歡！", collect_dislike_user_path(@user, :post => "#{p.id}"), {remote: true, method: :post, class:"btn btn-secondary btn-xl", id:"like-btn"} %>
      </td>
    </tr>
  </tbody>
  <%end%>
</table>