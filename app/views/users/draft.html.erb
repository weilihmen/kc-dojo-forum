<%= render partial:"user" %>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to "Post", post_user_path(@user), class: "nav-link"%>
  </li>
  <li class="nav-item">
    <%= link_to "Collect", collect_user_path(@user), class: "nav-link"%>
  </li>
  <li class="nav-item">
    <%= link_to "Draft", draft_user_path(@user), class: "nav-link active"%>
  </li>
  <li class="nav-item">
    <%= link_to "Comment", comment_user_path(@user), class: "nav-link"%>
  </li>
  <li class="nav-item">
    <%= link_to "Friend", friend_user_path(@user), class: "nav-link"%>
  </li>
</ul>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>title</th>
      <th>created_at</th>
      <th>action</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |p| %>
    <tr>
      <td><%= link_to p.title, post_path(p) %></td>
      <td><%= p.created_at.strftime("%Y/%m/%d %H:%M")%></td>
      <td>
        <%= link_to 'Edit', edit_post_path(p) %>
        <%= link_to 'Delete', post_path(p), method: :delete, data: { confirm: "Are you sure?"} %>
      </td>
    </tr>
  </tbody>
  <%end%>
</table>