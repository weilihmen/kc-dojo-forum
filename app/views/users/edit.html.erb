<h1>User Edit</h1>
<br>
<%= link_to "修改密碼", edit_user_registration_path, class: "btn btn-primary" %>
<br>
<br>
<%= form_for @user do |f| %>

  <fieldset disabled>
  <div class="field form-group">
    <%= f.label :email %><i>(不可修改)</i>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  </fieldset>

  <div class="field form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :birthday %><br />
    <%= f.date_field :birthday, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :intro %><br />
    <%= f.text_area :intro, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :avatar, "上傳頭相" %>
    <%= image_tag @user.avatar ,width:'300px' if @user.avatar? %>
    <%= f.file_field :avatar, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
